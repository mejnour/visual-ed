#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    MainScreen:

<Button>:
    font_size: 20
    size_hint: 0.5, 0.05

<MainWidget>:
    BoxLayout:
        canvas:
            Color:
                rgba: 1, 1, 0, 0.8

            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        spacing: 15

        Label:
            markup: 1
            text: '[b]Visual[/b]ED'
            font_size: 35
            size_hint: 1, 0.4
            pos_hint: {'center_x': 1, 'y': 50}

        Button:
            text: 'Pilha'
            pos_hint: {'center_x': 1, 'y': 120}

            on_release: app.root.current = 'pilha'

        Button:
            text: 'Fila'
            pos_hint: {'center_x': 1, 'y': 90}

        Button:
            text: 'Lista'
            pos_hint: {'center_x': 1, 'y': 60}

        Button:
            text: 'LSE'
            pos_hint: {'center_x': 1, 'y': 15}

        # Widget:
